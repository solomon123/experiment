<?php

/**
 * @file
 * Contains service.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function service_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the service module.
    case 'help.page.service':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('List of services provided by our coumpany') . '</p>';
      return $output;

    default:
  }
}


/**
 * Implements hook_theme().
 */
function service_theme() {
  $theme = [];
  $theme['service'] = [
    'render element' => 'elements',
    'file' => 'service.page.inc',
    'template' => 'service',
  ];
  $theme['service_content_add_list'] = [
    'render element' => 'content',
    'variables' => ['content' => NULL],
    'file' => 'service.page.inc',
  ];
  $theme[service] = [
      'render element' => 'children',
  ];
  return $theme;
}

/**
 * Implements hook_theme_suggestions_HOOK().
 */
function service_theme_suggestions_service(array $variables) {
  $suggestions = [];
  $entity = $variables['elements']['#service'];
  $sanitized_view_mode = strtr($variables['elements']['#view_mode'], '.', '_');

  $suggestions[] = 'service__' . $sanitized_view_mode;
  $suggestions[] = 'service__' . $entity->bundle();
  $suggestions[] = 'service__' . $entity->bundle() . '__' . $sanitized_view_mode;
  $suggestions[] = 'service__' . $entity->id();
  $suggestions[] = 'service__' . $entity->id() . '__' . $sanitized_view_mode;
  return $suggestions;
}
